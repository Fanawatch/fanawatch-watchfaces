{
  "id": "test_simple",
  "name": "Test Simple",
  "version": "1.0.0",
  "layout": "whistler-digital",

  "theme": {
    "backgroundColor": "#000000",
    "primaryColor": "#FFFFFF",
    "accentColor": "#00FF00",
    "font": {
      "family": "Helvetica-Bold",
      "url": null
    }
  },

  "complications": {
    "top-left": {
      "type": "image",
      "family": "accessoryCircular",
      "content": {
        "imageURL": "assets/test-logo.png",
        "contentMode": "scaledToFit"
      },
      "background": "#000000"
    },

    "bottom-left": {
      "type": "metric",
      "family": "accessoryCircular",
      "content": {
        "layout": "vertical",
        "icon": {
          "imageURL": "assets/icon-steps.png",
          "width": 24,
          "height": 24,
          "tintColor": "#00FF00"
        },
        "text": {
          "dataSource": "healthkit.steps",
          "placeholder": "1234",
          "fontFamily": "Helvetica-Bold",
          "fontSize": 16,
          "color": "#FFFFFF",
          "minimumScaleFactor": 0.5
        }
      },
      "background": "#000000"
    },

    "bottom-center": {
      "type": "metric",
      "family": "accessoryCircular",
      "content": {
        "layout": "vertical",
        "icon": {
          "imageURL": "assets/icon-battery.png",
          "width": 24,
          "height": 24,
          "tintColor": "#00FF00"
        },
        "text": {
          "dataSource": "device.battery",
          "format": "{value}%",
          "placeholder": "75%",
          "fontFamily": "Helvetica-Bold",
          "fontSize": 16,
          "color": "#FFFFFF",
          "minimumScaleFactor": 0.5
        }
      },
      "background": "#000000"
    },

    "bottom-right": {
      "type": "metric",
      "family": "accessoryCircular",
      "content": {
        "layout": "vertical",
        "icon": {
          "imageURL": "assets/icon-heart.png",
          "width": 24,
          "height": 24,
          "tintColor": "#FF0000"
        },
        "text": {
          "dataSource": "healthkit.heartrate",
          "placeholder": "72",
          "fontFamily": "Helvetica-Bold",
          "fontSize": 16,
          "color": "#FFFFFF",
          "minimumScaleFactor": 0.5
        }
      },
      "background": "#000000"
    },

    "center": {
      "type": "image",
      "family": "accessoryRectangular",
      "content": {
        "imageURL": "assets/test-center.png",
        "contentMode": "scaledToFill",
        "cornerRadius": 4
      },
      "background": "#000000"
    }
  },

  "metadata": {
    "author": "Test",
    "category": "test",
    "tags": ["test", "simple", "debug"],
    "price": 0,
    "description": "Simple test watchface for debugging"
  }
}
